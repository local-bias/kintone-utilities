{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2017"],
    "declaration": true,
    "sourceMap": true,
    "module": "CommonJS",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
